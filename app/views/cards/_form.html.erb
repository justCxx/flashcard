<%= simple_form_for [deck, card], url: url do |f| %>

  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(card.errors.count, "error") %> prohibited
        this card from being saved:
      </h2>
      <ul>
        <% card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if deck.new_record? %>
    <%= simple_fields_for deck do |deck_form| %>
      <%= deck_form.input :title, label: "Deck title", as: :string %>
    <% end %>
  <% end %>

  <%= f.input :original_text, as: :string %>
  <%= f.input :translated_text, as: :string %>
  <div align="center">
    <%= image_tag card.image.url(:medium) %>
  </div>
  <%= f.input :image, as: :file %>
  <%= f.input :review_date %>
  <%= f.button :submit %>
<% end %>
